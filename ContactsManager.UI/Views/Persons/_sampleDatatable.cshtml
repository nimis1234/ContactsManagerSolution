@model IEnumerable<PersonResponse>

<div class="container-fluid">
    <h1>Person List</h1>
    <div>
        <table id="personTable" class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">DateOfBirth</th>
                    <th scope="col">Gender</th>
                    <th scope="col">Country</th>
                    <th scope="col">Address</th>
                    <th scope="col">ReceiveNewsLetters</th>
                    <th scope="col">Age</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var person in Model)
                {
                    <tr>
                        <td>@person.PersonName</td>
                        <td>@person.Email</td>
                        <td>@person.DateOfBirth</td>
                        <td>@person.Gender</td>
                        <td>@person.Country</td>
                        <td>@person.Address</td>
                        <td>@person.ReceiveNewsLetters</td>
                        <td>@person.Age</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Add DataTables CDN -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>

<!-- Initialize DataTable -->
<script>
    $(document).ready(function() {
        $('#personTable').DataTable({
            "paging": true,          // Enable pagination
            "searching": true,       // Enable search
            "ordering": true,        // Enable sorting
            "info": true,            // Show information about the current page
            "autoWidth": false       // Adjust column width automatically
        });
    });
</script>

<!-- DataTables CSS -->
<link href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" rel="stylesheet" />
